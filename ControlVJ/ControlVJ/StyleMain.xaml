<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ControlVJ">
    <Style TargetType="TextBox">
        <Setter Property="Margin" Value="0 2 50 2"></Setter>
        <Setter Property="Padding" Value="0 4 0 4"></Setter>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="Margin" Value="0 2 50 2"></Setter>
        <Setter Property="Padding" Value="0 4 0 4"></Setter>
    </Style>

    <Style TargetType="Button">
        <Setter Property="Margin" Value="5 2 5 2"></Setter>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontSize" Value="15"></Setter>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="VerticalAlignment" Value="Center"></Setter>
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Header" Value="15"></Setter>
    </Style>
</ResourceDictionary>